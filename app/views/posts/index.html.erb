<h3> Welcome to the Fetal Steve Blog! </h3>
<%= link_to "Make a Placenta", new_post_path %>
<h4> Posts </h4>
<ul>
  <% @posts.each do |post| %>
  <li>
    <%= post.title %><br />
    <%= post.description %><br />
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "Really delete #{post.title}?"} %> 
  </li>
  <% end %>
</ul>
