<h1 class="text-center">Tours</h1>

<hr />

<% if user_signed_in? %>
  <div class="editor-toolbar">
    <div>
      Editor Toolbar
    </div>
    <%= link_to "Create Tour", new_tour_path %>
  </div>
<% end %>

<ul class="list-group">
  <% @tours.each do |tour| %>
  <div class="col-xs-6 col-sm-4 col-md-3 text-center tour-item">
    <%= link_to tour_path(tour) do %>
    <div class="thumbnail" style="margin: auto;">
      <% if tour.galleries.length > 0 %>
      <div class="thumbnail-crop">
        <%= image_tag tour.galleries[0].pictures[0].image.url %>
      </div>
      <% end %>
      <span class="tour-label">
        <%= tour.name %>
      </span>
      <% if user_signed_in? %>
        <%= button_to "delete", tour_path(tour), class: "btn btn-danger btn-xs" , method: :delete , data: {confirm: "Really delete #{tour.name}?"} %>
      <% end %>
    </div>
    <% end %>
  </div>
  <% end %>
</ul>