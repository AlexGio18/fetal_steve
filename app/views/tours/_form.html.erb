<%= form_for(@tour, html: { multipart: true}) do |f| %>
  <ul>
  <% @tour.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.text_field :date %><br />
  </p>
  <p>
    <%= f.label :tourers %><br />
    <%= f.text_field :tourers %><br />
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %><br />
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "<< Back to Tours", tours_path %>
