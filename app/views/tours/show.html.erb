<div class="row">
  <div class="col-xs-12">
    <%= link_to tours_path do %>
    <i class="glyphicon glyphicon-log-out back-icon" title="Back To Tours"></i>
    <% end %>
    <h1 class="text-center"><%= @tour.name %></h1>

  </div>
</div>

<hr />

<%= render 'editor_toolbar' %>

<div class="row tour-info">
  <div class="visible-md visible-lg col-md-1">
  </div>
  <div class="col-xs-12 col-md-10">
    <p><%= @tour.location %></p>
    <p><%= @tour.date %></p>
    <p><%= @tour.tourers %></p>
    <p><%= @tour.description %></p>
  </div>
  <div class="visible-md visible-lg col-md-1">
  </div>
</div>

<hr />

  <% if @tour.galleries.size > 0 %>
     <%= render "galleries/show_gallery" %> 
  <% end %>


